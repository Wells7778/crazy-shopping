<div class="row">
  <div class="col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Shopping list</h3>
      </div>
      <div class="panel-body">
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Price</th>
              <th>Quantity</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr id="cart_item-<%=cart_item.product_id%>">
                <td>
                  <%= image_tag cart_item.product.image, width: "100px" %>
                  <%= cart_item.product.name %>
                </td>
                <td>$ <%= cart_item.product.price %></td>
                <td><%= cart_item.quantity %></td>
                <td>$ <%= cart_item.product.price * cart_item.quantity %></td>
                <td><%= link_to "D", remove_from_cart_product_path(cart_item.product), remote: true, method: :delete %></td>
              </tr>
            <% end %>
            <tr>
              <td></td>
              <th>Subotal</th>
              <th><%= current_cart.total_quantity %></th>
              <th>$ <%= current_cart.total_price %></th>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Shopping infomation</h3>
      </div>
      <div class="panel-body">
        <%= form_for @order do |f| %>
          <div class="form-group">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :phone, "Phone" %>
            <%= f.text_field :phone, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :address, "Address" %>
            <%= f.text_field :address, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "Check Out", class: "btn btn-default" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>