<h1>Products List</h1>
<div class="row">
  <% @products.each_with_index do |product, index| %>
    <div class="col-sm-3">
      <div class="thumbnail">
        <%= image_tag product.image, width: "100%" %>
        <div class="caption">
          <h3><%= product.name %></h3>
          <p><%= truncate product.description, length: 80 %></p>
          <p>$ <%= product.price %></p>
          <p><%= link_to "Add to Cart", add_to_cart_product_path(product), method: :post, class: "btn btn-primary" %></p>
        </div>
      </div>
    </div>
    <% if index % 4 == 3 %>
      <div class="clearfix"></div>
    <% end %>
  <% end %>
</div>